# Protein Diffusion Design Lab Environment Variables

# =============================================================================
# Core Application Settings
# =============================================================================
APP_NAME=protein-diffusion-design-lab
APP_VERSION=0.1.0
ENVIRONMENT=development  # development/staging/production
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# Model and Computation Settings
# =============================================================================
# Device configuration
DEVICE=cuda  # cuda/cpu/mps
CUDA_VISIBLE_DEVICES=0
TORCH_DTYPE=float16  # float16/float32/bfloat16

# Model paths and checkpoints
MODEL_CHECKPOINT_PATH=./checkpoints/boltz-1b.ckpt
TOKENIZER_PATH=./checkpoints/tokenizer
ESM_MODEL_PATH=./checkpoints/esm2_t33_650M_UR50D

# Generation defaults
DEFAULT_NUM_SAMPLES=10
DEFAULT_MAX_LENGTH=256
DEFAULT_TEMPERATURE=0.8
DEFAULT_GUIDANCE_SCALE=1.0

# =============================================================================
# Data and Storage Settings
# =============================================================================
# Data directories
DATA_DIR=./data
OUTPUT_DIR=./outputs
STRUCTURE_DIR=./structures
RANKINGS_DIR=./rankings
CACHE_DIR=./cache

# Database settings (if using)
DATABASE_URL=postgresql://user:password@localhost:5432/protein_diffusion
REDIS_URL=redis://localhost:6379/0

# File storage
MAX_FILE_SIZE=100MB
ALLOWED_EXTENSIONS=.pdb,.fasta,.fa,.seq,.txt

# =============================================================================
# External Tool Integration
# =============================================================================
# Structure prediction tools
ESMFOLD_AVAILABLE=true
COLABFOLD_PATH=/usr/local/bin/colabfold_batch
ALPHAFOLD_API_KEY=your_alphafold_api_key_here

# Molecular analysis tools
FOLDSEEK_PATH=/usr/local/bin/foldseek
AUTODOCK_VINA_PATH=/usr/local/bin/vina
PYMOL_PATH=/usr/local/bin/pymol

# Bioinformatics databases
PDB_MIRROR_URL=https://files.rcsb.org/download/
UNIPROT_API_URL=https://rest.uniprot.org/
PFAM_DATABASE_PATH=./data/Pfam-A.hmm

# =============================================================================
# API and Web Interface Settings
# =============================================================================
# API configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=300
MAX_REQUESTS_PER_MINUTE=60

# Streamlit web interface
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_THEME_PRIMARY_COLOR=#1f77b4

# Authentication (if enabled)
SECRET_KEY=your-super-secret-key-here
JWT_EXPIRATION_HOURS=24
REQUIRE_AUTH=false

# =============================================================================
# Monitoring and Logging
# =============================================================================
# Monitoring
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Logging
LOG_FILE=./logs/protein_diffusion.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here
ENABLE_SENTRY=false

# =============================================================================
# Performance and Optimization
# =============================================================================
# Memory management
MAX_MEMORY_GB=16
ENABLE_MEMORY_MONITORING=true
GARBAGE_COLLECTION_THRESHOLD=0.8

# Parallel processing
MAX_WORKERS=4
BATCH_SIZE=8
NUM_DATALOADER_WORKERS=2

# Caching
ENABLE_RESULT_CACHING=true
CACHE_TTL_HOURS=24
CACHE_MAX_SIZE_MB=1000

# =============================================================================
# Quality Control and Validation
# =============================================================================
# Structure quality thresholds
MIN_CONFIDENCE_THRESHOLD=0.7
MIN_STRUCTURE_QUALITY=0.6
MAX_CLASH_SCORE=0.1
MIN_RAMACHANDRAN_SCORE=0.8

# Sequence validation
MIN_SEQUENCE_LENGTH=10
MAX_SEQUENCE_LENGTH=1000
ALLOWED_AMINO_ACIDS=ACDEFGHIKLMNPQRSTVWY

# Binding evaluation
DEFAULT_BINDING_CUTOFF=-5.0  # kcal/mol
DOCKING_TIMEOUT_SECONDS=300

# =============================================================================
# Development and Testing
# =============================================================================
# Testing configuration
TEST_DATA_DIR=./tests/data
RUN_SLOW_TESTS=false
ENABLE_GPU_TESTS=false

# Development tools
ENABLE_PROFILING=false
PROFILER_OUTPUT_DIR=./profiling
ENABLE_DEBUGGING=false

# Pre-commit hooks
RUN_LINTING=true
RUN_TYPE_CHECKING=true
RUN_SECURITY_CHECKS=true

# =============================================================================
# Cloud and Deployment (Optional)
# =============================================================================
# AWS S3 (for model storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-west-2
S3_BUCKET_NAME=protein-diffusion-models

# Google Cloud (for computing)
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json
GCP_PROJECT_ID=your-gcp-project-id

# Weights & Biases (for experiment tracking)
WANDB_API_KEY=your_wandb_api_key
WANDB_PROJECT=protein-diffusion-design-lab
WANDB_ENTITY=your_wandb_entity

# =============================================================================
# Security Settings
# =============================================================================
# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8501
CORS_ALLOW_CREDENTIALS=true

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # seconds

# Input validation
SANITIZE_INPUTS=true
MAX_INPUT_SIZE=10MB

# SSL/TLS (for production)
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem
FORCE_HTTPS=false