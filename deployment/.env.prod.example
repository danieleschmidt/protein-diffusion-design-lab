# Production Environment Variables for Protein Diffusion Design Lab
# Copy this file to .env.prod and update the values

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_USER=protein_user
POSTGRES_DB=protein_db

# Authentication & Security
JWT_SECRET=your_jwt_secret_key_here_should_be_long_and_random
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Email Configuration (optional)
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# Webhook Configuration (optional)
WEBHOOK_URL=https://your-webhook-url.com/alerts

# External Services
REDIS_URL=redis://redis:6379/0

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Model Configuration
MODEL_PATH=/app/models/protein_diffusion_1b.ckpt

# Backup Configuration
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Monitoring Configuration
PROMETHEUS_RETENTION=30d
GRAFANA_INSTALL_PLUGINS=grafana-piechart-panel

# Performance Tuning
MAX_WORKERS=4
WORKER_MEMORY_LIMIT=2G
REDIS_MAXMEMORY=2gb

# Feature Flags
ENABLE_STRUCTURE_PREDICTION=true
ENABLE_BINDING_AFFINITY=true
ENABLE_BATCH_PROCESSING=true
ENABLE_WEB_INTERFACE=true

# Development/Debug (set to false in production)
DEBUG=false
ENABLE_PROFILING=false
LOG_LEVEL=INFO